<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:layout_width="214dp"
            android:layout_height="68dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:fontFamily="@font/roboto_bold"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="8sp"
            android:layout_marginTop="24dp"
            tools:text="Get Started with Blockchain"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="4sp"
            tools:text="Become part of a fast-growing area of the crypto world. You are the only person who can access your crypto assets."
            android:textColor="@color/basic500"
            android:textSize="14sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/button_ok"
            style="@style/WavesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/ok_cap" />

    </LinearLayout>

</androidx.cardview.widget.CardView>