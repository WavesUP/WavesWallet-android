<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingBottom="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear_avatars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <View
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:background="@drawable/asset_gray_icon" />

            <View
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/asset_gray_icon" />

            <View
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:background="@drawable/asset_gray_icon" />

        </LinearLayout>

        <View
            android:id="@+id/view_title"
            android:layout_width="64dp"
            android:layout_height="12dp"
            android:layout_below="@+id/linear_avatars"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/skeleton_basic_100_round_10" />

        <View
            android:layout_below="@+id/view_title"
            android:layout_centerHorizontal="true"
            android:layout_width="122dp"
            android:layout_height="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/skeleton_basic_100_round_7" />


        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:background="@drawable/asset_gray_icon" />

    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/asset_item_radius"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="24dp"
            android:paddingEnd="16dp"
            android:paddingBottom="24dp">

            <View
                android:layout_width="64dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/skeleton_basic_100_round_7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="166dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/skeleton_basic_100_round_10" />

                <View
                    android:layout_width="64dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/skeleton_basic_100_round_10" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_details_balances"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp">

                    <View
                        android:layout_width="144dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/skeleton_basic_100_round_7" />


                    <View
                        android:layout_width="64dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/skeleton_basic_100_round_7" />

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/view_line_3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="18dp"
                    android:layerType="software"
                    android:src="@drawable/shape_dashed_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp">

                    <View
                        android:layout_width="144dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/skeleton_basic_100_round_7" />


                    <View
                        android:layout_width="64dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/skeleton_basic_100_round_7" />
                </RelativeLayout>


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/view_line_1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="14dp"
                    android:layerType="software"
                    android:src="@drawable/shape_dashed_line" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <View
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/asset_gray_icon" />

                    <View
                        android:layout_width="44dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/skeleton_basic_100_round_7" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <View
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/asset_gray_icon" />

                    <View
                        android:layout_width="44dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/skeleton_basic_100_round_7" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <View
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/asset_gray_icon" />

                    <View
                        android:layout_width="44dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/skeleton_basic_100_round_7" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="144dp"
        android:layout_height="10dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/skeleton_basic_100_round_7" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:alpha="0.6">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="6dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/asset_item_radius"
            app:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/image_asset_icon"
                    android:layout_width="@dimen/asset_icon_size"
                    android:layout_height="@dimen/asset_icon_size"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/asset_gray_icon" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/image_asset_icon">


                    <View
                        android:id="@+id/view_title_skeleton"
                        android:layout_width="64dp"
                        android:layout_height="10dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/skeleton_basic_100_round_7"
                        app:layout_constraintEnd_toEndOf="parent" />


                    <View
                        android:id="@+id/view_amount_skeleton"
                        android:layout_width="144dp"
                        android:layout_height="12dp"
                        android:layout_below="@+id/view_title_skeleton"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/skeleton_basic_100_round_10" />

                    <View
                        android:id="@+id/view_tag_skeleton"
                        android:layout_width="44dp"
                        android:layout_height="12dp"
                        android:layout_below="@+id/view_title_skeleton"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/view_amount_skeleton"
                        android:background="@drawable/skeleton_basic_100_round_10" />


                </RelativeLayout>


            </RelativeLayout>


        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:alpha="0.4">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/asset_item_radius"
            app:cardElevation="2dp"
            app:contentPadding="14dp">

            <View
                android:layout_width="166dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/skeleton_basic_100_round_7" />

        </androidx.cardview.widget.CardView>

    </FrameLayout>
</LinearLayout>