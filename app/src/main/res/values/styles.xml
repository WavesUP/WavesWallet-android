<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="BaseTheme">
        <!-- <v21 specific stuff here -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Common styles across all res qualifiers resides here, anything specific can inherit from this -->
        <item name="colorPrimary">@color/blockchain_blue</item>
        <item name="colorPrimaryDark">@color/blockchain_dark_blue</item>
        <item name="colorAccent">@color/blockchain_blue</item>

        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="android:windowBackground">@color/blockchain_pearl_white</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="android:toolbarStyle">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="actionModeBackground">@color/blockchain_pearl_white</item>
        <item name="actionModeCloseDrawable">@drawable/ic_close_grey_24dp</item>

        <item name="colorControlNormal">@color/blockchain_light_grey</item>
        <item name="colorControlActivated">@color/blockchain_blue</item>
        <item name="colorControlHighlight">@color/blockchain_blue</item>

        <item name="autoCompleteTextViewStyle">@style/CursorColor</item>
    </style>

    <style name="AppThemeV2" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/submit400</item>
        <item name="colorPrimaryDark">@color/submit700</item>
        <item name="colorAccent">@color/submit400</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="drawerArrowStyle">@style/DrawerIconWhite</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="actionMenuTextAppearance">@style/MenuItemTextAppearance</item>
    </style>

    <style name="SubmitEditText">
        <item name="colorControlNormal">@color/accent50</item>
        <item name="colorControlActivated">@color/submit400</item>
        <item name="colorControlHighlight">@color/submit400</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/basic500</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Toolbar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="MenuItemTextAppearance" parent="android:TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="actionMenuTextColor">@color/black</item>
    </style>

    <style name="DrawerIconWhite" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="AppThemeV2.NoActionBar" parent="AppThemeV2">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="AppThemeV2.NoActionBar.Translucent" parent="AppThemeV2.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppThemeV2.NoActionBar.Translucent.DarkStatusBar" parent="AppThemeV2.NoActionBar.Translucent">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="AppThemeV2.AssetsSoring" parent="AppThemeV2.NoActionBar.Translucent.DarkStatusBar">
        <item name="actionMenuTextColor">@color/disabled900</item>
        <item name="actionButtonStyle">@style/AppTheme.Widget.ActionButton</item>
    </style>

    <style name="AppTheme.Widget.ActionButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionMenuTextColor">@color/black</item>
    </style>

    <style name="AppThemeV2.NoActionBar.Translucent.WhiteStatusBar" parent="AppThemeV2.NoActionBar.Translucent">
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <style name="AppThemeV2.NoActionBar.Translucent.Fullscreen" parent="AppThemeV2.NoActionBar.Translucent.WhiteStatusBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppThemeV2.NoActionBar.Translucent.Splash" parent="AppThemeV2.NoActionBar.Translucent.Fullscreen">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="WavesButton" parent="android:style/Widget.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/selector_waves_primary_button</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="WavesButton.Gray" parent="WavesButton">
        <item name="android:background">@drawable/shape_btn_waves_gray_default</item>
        <item name="android:textColor">@color/blockchain_grey</item>
    </style>

    <style name="WavesButton.Red" parent="WavesButton">
        <item name="android:background">@drawable/shape_btn_waves_red_default</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="PassCodeEntryButtonNumberText">
        <item name="android:layout_width">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/disabled900</item>
        <item name="android:textSize">32sp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:layout_marginStart">21dp</item>
        <item name="android:layout_marginEnd">21dp</item>
    </style>

    <style name="TextTag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/basic100_rounded</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:text">@string/send_choose_from_address_book</item>
        <item name="android:textColor">@color/basic500</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TickerTag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_ticket_submit50_rounded</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">@color/info500</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="DashedLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@drawable/shape_dashed_line</item>
        <item name="android:layerType">software</item>
    </style>

    <style name="DialogBackgroundTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextSubtitle" parent="TitleText">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/disabled500</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

</resources>
